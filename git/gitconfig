[alias]
    b  = branch
    ba  = branch -a
    b-mv = "branch -m"
    aa = add -A
    co = checkout
    cp = cherry-pick
    st = status -sb
    cl = clone
    ci = commit
    cm = commit -m
    co = checkout
    dc = diff --cached
    lg = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all"
    last = log -1 --stat
    unstage = reset HEAD --
    df = "difftool --tool=vimdiff"
    dfy = "difftool --tool=vimdiff -y"
    s = "stash show"
    s-save = "stash save"
    s-list = "stash list"
    s-show = "!f() { git stash show stash^{/$*}; }; f"
    s-show-p = "!f() { git stash show stash^{/$*} -p; }; f"
    s-apply = "!f() { git stash apply stash^{/$*}; }; f"
    heads = "show-ref --heads"
[core]
    quotepath = false
	excludesfile = /home/stefanos/.gitignore_global
[push]
    default = simple

[diff]
    tool = meld
