#!/bin/bash

WD="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
#source "${WD}/../_utils.bsh"

# Bash-It
rm -f ~/.bash_it 2>/dev/null
rm -f ~/.bashrc.bak 2>/dev/null
$WD/_libs/bash-it/install.sh --silent
ln -sf $WD/_libs/bash-it ~/.bash-it
sed -i "s/^export BASH_IT_THEME=.*/export BASH_IT_THEME='powerline-naked-multiline'/g" ~/.bashrc

# FZF
$WD/_libs/fzf/install
